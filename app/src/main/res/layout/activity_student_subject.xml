<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Asignar Estudiante a Materia"
            android:textColor="#D64B4B"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/editTextIDStudentSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ID Estudiante/Materia"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/spinnerStudentSS"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <Spinner
            android:id="@+id/spinnerSubjectSS"
            android:layout_width="match_parent"
            android:layout_height="42dp" />

        <Button
            android:id="@+id/buttonRegisterStudentSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4CAF50"
            android:text="Registrar" />

        <Button
            android:id="@+id/buttonConsultStudentSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F3C332"
            android:text="Consultar" />

        <Button
            android:id="@+id/buttonUpdateStudentSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0AA0E4"
            android:text="Editar" />

        <Button
            android:id="@+id/buttonDeleteStudentSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E43333"
            android:text="Eliminar" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/buttonConsultAllStudentSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5EAC38DF"
                android:text="Mostrar todos los registros" />
        </RadioGroup>

    </LinearLayout>
</RelativeLayout>